package ar.edu.unlu.ejercicio3;

public class Contraseña {
	
	private String contraseña;
	
	private int longitud; 
	
	public Contraseña(int tamano) {
		String AlphaNumericString = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                + "0123456789"
                + "abcdefghijklmnopqrstuvxyz"; //Todos los posibles caracteres
		StringBuilder sb = new StringBuilder(tamano);
		
		for (int i = 0; i < tamano; i++) {
            int index = (int)(AlphaNumericString.length() * Math.random());
            sb.append(AlphaNumericString.charAt(index));}
		
		longitud = tamano;
	}
	
	public String getContraseña() {
		return contraseña;
	}
	
	public boolean tipoContraseña() {
		//True = Fuerte
		//False = Debil
		int mayusculas = 0;
		int minusculas = 0;
		int numeros = 0;
		boolean tipo = false;
		
		for (int contador = 0; contador < contraseña.length(); contador++) {
			if (contraseña.charAt(contador) >= 'a') and
				(contraseña.charAt(contador) <= 'z');{
				minusculas++;}
			if (contraseña.charAt(contador) >= 'A') and
			(contraseña.charAt(contador) <= 'Z');{
				mayusculas++;}
			if (contraseña.charAt(contador) >= '0') and
			(contraseña.charAt(contador) <= '9');{
				numeros++;
				}
			
			//Comprobar si es fuerte
			if (mayusculas > 2) and (minusculas > 1) and (numeros >= 2){
				tipo = true;}
			}
		
	}

	private void and(boolean b) {
		// TODO Auto-generated method stub
		
	}
}
